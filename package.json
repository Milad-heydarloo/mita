{
  "name": "menumita-static-site",
  "version": "1.0.0",
  "description": "A modern, SEO-friendly static website template in Persian (RTL)",
  "main": "index.html",
  "scripts": {
    "build": "node build.js",
    "dev": "npx http-server -p 3000 -o",
    "optimize": "npm run minify-css && npm run minify-js",
    "minify-css": "npx clean-css-cli styles.css -o dist/styles.min.css",
    "minify-js": "npx terser scripts.js -o dist/scripts.min.js",
    "copy-assets": "cp -r images dist/ && cp index.html dist/",
    "clean": "rm -rf dist && mkdir dist"
  },
  "keywords": [
    "static-site",
    "persian",
    "rtl",
    "seo",
    "responsive",
    "modern",
    "template"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "terser": "^5.31.0",
    "http-server": "^14.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/menumita-static-site.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/menumita-static-site/issues"
  },
  "homepage": "https://github.com/yourusername/menumita-static-site#readme"
}